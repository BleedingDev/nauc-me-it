{
  "$schema": "./node_modules/rome/configuration_schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    },
    "ignore": [
      "node_modules",
      ".next",
      ".vscode",
      "*.svg",
      "public"
    ]
  },
  "formatter": {
    "enabled": true,
    "lineWidth": 120,
    "ignore": [
      "node_modules",
      ".next",
      ".vscode",
      "*.svg",
      "public"
    ]
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded"
    }
  }
}
