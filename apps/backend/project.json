{
  "name": "backend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/backend",
  "projectType": "application",
  "tags": [],
  "// targets": "to see all targets run: nx show project backend --web",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bun build apps/backend/src/index.ts"
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bun --watch apps/backend/src/index.ts"
      }
    },
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cross-env NODE_ENV=production bun apps/backend/src/index.ts"
      }
    }
  }
}
