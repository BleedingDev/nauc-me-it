{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,

    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,

    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "module": "Preserve",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@nmit-coursition/ai": ["libs/ai/src/index.ts"],
      "@nmit-coursition/design-system": ["libs/ui/design-system/src/index.ts"],
      "@nmit-coursition/ui/primitives": ["libs/ui/primitives/src/index.ts"],
      "@nmit-coursition/ui/primitives/*": ["libs/ui/primitives/src/*"],
      "@nmit-coursition/ui/utils": ["libs/ui/utils/src/index.ts"],
      "@nmit-coursition/ui/utils/*": ["libs/ui/utils/src/*"],
      "@nmit-coursition/utils": ["libs/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
