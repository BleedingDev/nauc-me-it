{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "esnext",
    "lib": ["ESNext", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@nmit-coursition/ai": ["libs/ai/src/index.ts"],
      "@nmit-coursition/design-system": ["libs/ui/design-system/src/index.ts"],
      "@nmit-coursition/payments": ["libs/payments/src/index.ts"],
      "@nmit-coursition/ui/primitives": ["libs/ui/primitives/src/index.ts"],
      "@nmit-coursition/ui/primitives/*": ["libs/ui/primitives/src/*"],
      "@nmit-coursition/ui/utils": ["libs/ui/utils/src/index.ts"],
      "@nmit-coursition/ui/utils/*": ["libs/ui/utils/src/*"],
      "@nmit-coursition/utils": ["libs/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
